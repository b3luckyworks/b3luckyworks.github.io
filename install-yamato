#!/usr/bin/env bash
set -euo pipefail

# Immer die aktuelle Version aus dem yamato-Repo laden:
URL="https://raw.githubusercontent.com/b3luckyworks/yamato/HEAD/scripts/install.sh"
TMP="/tmp/yamato-install.sh"

curl -fsSL "$URL" -o "$TMP"
chmod +x "$TMP"

# Ãœbergibt optional weitergereichte Argumente, z. B. "server"
bash "$TMP" "$@"
